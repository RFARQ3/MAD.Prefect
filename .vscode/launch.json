{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Current File as Module",
            "type": "debugpy",
            "request": "launch",
            "console": "internalConsole",
            "code": "import runpy; runpy.run_module(r'${relativeFileDirname}'.replace('\\\\', '.') + r'.${fileBasenameNoExtension}', run_name='__main__')",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "internalConsole",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        }
    ]
}